{
	"name": "ING Session Extender",
	"description": "Build an Extension!",
	"version": "0.1",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [ "https://*.ing.de/*" ],
			"js": [ "ing-session-extender.js" ]
		}
	],
	"permissions": [ "storage", "activeTab", "scripting", "tabs" ],
	"host_permissions": [ "https://*.ing.de/*" ],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "/images/ing-96x96.png",
			"32": "/images/ing-96x96.png",
			"48": "/images/ing-96x96.png",
			"128": "/images/ing-96x96.png"
		}
	},
	"icons": {
		"16": "/images/ing-96x96.png",
		"32": "/images/ing-96x96.png",
		"48": "/images/ing-96x96.png",
		"128": "/images/ing-96x96.png"
	},
	"options_page": "options/options.html"
}
