{
	"name": "Automatic Session Extender for ING Online Banking",
	"description": "Automatically extends an ING online banking session, so you do not get logged out after 5 mins.",
	"version": "0.1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": [ "https://banking.ing.de/*" ],
			"js": [ "ing-session-extender.js" ]
		}
	],
	"permissions": [ "storage", "tabs" ],
	"host_permissions": [ "https://banking.ing.de/*" ],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "/images/ing_auto_session_extender_icon_16.png",
			"32": "/images/ing_auto_session_extender_icon_32.png",
			"48": "/images/ing_auto_session_extender_icon_48.png",
			"128": "/images/ing_auto_session_extender_icon_128.png"
		}
	},
	"icons": {
		"16": "/images/ing_auto_session_extender_icon_16.png",
		"32": "/images/ing_auto_session_extender_icon_32.png",
		"48": "/images/ing_auto_session_extender_icon_48.png",
		"128": "/images/ing_auto_session_extender_icon_128.png"
	},
	"options_page": "options/options.html"
}

